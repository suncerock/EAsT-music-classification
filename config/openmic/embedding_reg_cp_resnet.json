{
    "seed": 1223,
    "data":
    {
        "train_manifest_path": "openmic_train.json",
        "val_manifest_path": "openmic_valid.json",
        "test_manifest_path": "openmic_test.json",
        "requires_vggish": true,
        "requires_openl3": true,
        "requires_passt": true,
        "requires_pann": true,

        "mixup": 0.3,
    
        "featurizer":{
            "name": "log_mel_featurizer",
            "args": {
                "n_fft": 1024,
                "hop_length": 320,
                "win_length": 800,
                "sr": 32000,
                "n_mels": 128,

                "fmin": 0,
                "fmax": 16000,
                "fmin_aug_range": 20,
                "fmax_aug_range": 2000,

                "normalize_mean": -3.7,
                "normalize_std": 3.1,

                "freqm": 48,
                "timem": 192
            }
        },
        "batch_size": 16,
        "train_shuffle": true,
        "num_workers": 16
    },

    "model":
    {
        "backbone":{
            "feature": "openl3",
            "student": {
                "name": "CPResNet",
                "ckpt": null,
                "args": {
                    "rho": 7,
                    "in_channel": 1,
                    "base_channels": 128,
                    "num_classes": 20
                }
            },
            "teacher": {
                "name": "PretrainedFeatureClassifier",
                "ckpt": "work_dir_openmic/pretrained_openl3/epoch=16-val_mAP=0.808.ckpt",
                "args": {
                    "input_dim": 512,
                    "num_classes": 20
                }
            },
            "reg_loss_weight": 0.8,
            "regularization":{
                "name": "FeatureSpaceRegularizationLoss",
                "args": {
                    "mode": "distance_correlation",
                    "stages_args": {
                        "1": {"weight": 0.0, "student_expand": 1, "teacher_expand": 6},
                        "2": {"weight": 0.0, "student_expand": 1, "teacher_expand": 6},
                        "3": {"weight": 1.0, "student_expand": 1, "teacher_expand": 6}
                    }
                }
            }
        },

        "optim":{
            "optimizer": {
                "name": "Adam",
                "args": {
                    "lr": 0.0001,
                    "weight_decay": 0.0001
                }
            },
            "scheduler": {
                "name": "ReduceLROnPlateau",
                "monitor": "val/loss/total",
                "args": {
                    "factor": 0.2,
                    "patience": 8
                }
            }
        }
    },    

    "trainer":
    {
        "args":
        {
            "max_epochs": -1,
            "max_steps": 80000,
            "gradient_clip_val": 1.0,
            "num_sanity_val_steps": -1,

            "accelerator": "gpu",
            "devices": [0],
            "deterministic": true,

            "check_val_every_n_epoch": 1,
            "log_every_n_steps": 50
        },

        "logger":
        {
            "save_dir": "work_dir_openmic/embedding_reg_cp_resnet_rho3_openl3_reg123",
            "name": "log"
        },

        "checkpoint":
        {
            "dirpath": "work_dir_openmic/embedding_reg_cp_resnet_rho3_openl3_reg123",
            "filename": "epoch={epoch}-val_mAP={val/mAP:.3f}",
            "auto_insert_metric_name": false,

            "monitor": "val/mAP",
            "mode": "max",
            "every_n_epochs": 1,
            "save_top_k": 1
        },

        "early_stopping":
        {
            "monitor": "val/loss/total",
            "mode": "min",
            "patience": 15
        }
    }
}